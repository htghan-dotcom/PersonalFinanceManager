{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ Project",
            "type": "shell",
            "command": "g++.exe",
            "args": [
                "-std=c++17",
                "-I${workspaceFolder}\\include",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\App.cpp",
                "${workspaceFolder}\\src\\DataManager.cpp",
                "${workspaceFolder}\\src\\Expense.cpp",
                "${workspaceFolder}\\src\\Income.cpp",
                "${workspaceFolder}\\src\\RecurringTransaction.cpp",
                "${workspaceFolder}\\src\\Statistics.cpp",
                "${workspaceFolder}\\src\\Utils.cpp",
                "${workspaceFolder}\\src\\Wallet.cpp",
                "-o",
                "${workspaceFolder}\\build\\Debug\\app.exe",
                "-Wall",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
